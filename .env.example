# Database
DATABASE_URL=your_database_url_here

# OpenAI Integration
OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Razorpay Payment Integration
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id_here

# Security
JWT_SECRET=your_strong_jwt_secret_here
SESSION_SECRET=your_strong_session_secret_here

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_here

# Firebase Cloud Messaging (Android Push Notifications)
FCM_SERVER_KEY=your_fcm_server_key_here
FCM_SENDER_ID=your_fcm_sender_id_here

# Apple Push Notifications (iOS)
APNS_KEY_PATH=./apns_cert.pem
APNS_KEY_ID=your_apns_key_id_here
APNS_TEAM_ID=your_apple_team_id_here
APNS_BUNDLE_ID=com.planify.app
APNS_ENVIRONMENT=production

# Web Push Notifications (VAPID Keys)
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# Environment
NODE_ENV=production

# Production Settings
PORT=5000
HOST=0.0.0.0
REPLIT_DB_URL=your_replit_db_url_if_needed